.play
  background $play-bkg
  color $play-color

  &.header
    background $play-top-bkg
    font-size 1.5em
    height 3rem
    line-height 3rem
    text-align center

    .time
      float left
      width 20%

      .fa
        margin-right 0.25em

    .category
      float left
      width 65%

    .pause
      float left
      width 15%

  .pause-screen
    text-align center
    font-family Droid Sans Mono
    font-size 4rem
    margin-top 2rem
    text-transform uppercase

    .action
      .button
        button($play-pause-surrender-bkg, $play-pause-surrender-color)
        height 5rem
        margin-top 4rem

  .word
    margin-top 1rem

    ul
      text-align center

      li.item
        display inline-block
        font-family Droid Sans Mono
        font-size 4rem
        font-size 16vw
        list-style none
        margin 0.5rem

  .keyboard
    bottom 5rem
    position absolute
    width calc(100% - 1.5rem)
    margin 0 auto
    left 0%
    right 0%

    &.disabled
      .button
        opacity 0.4

    .button
      background $play-key-bkg
      border none
      border-radius 0.15rem
      color $play-key-color
      font-family Droid Sans Mono
      font-size 0.85rem
      padding 0.8rem 1.5rem
      text-transform uppercase
      margin 0.3rem

      &.correct
        background $play-key-green

      &.wrong
        background $play-key-red

  footer
    background $play-footer-bkg
    bottom 0
    left 0
    height 4rem
    margin 0
    position absolute
    width 100%

    .status
      float left
      height 100%
      text-align center
      width 100%

      .rating
        height 4rem

        li
          display inline-block
          list-style none
          margin 1rem

          .fa
            font-size 2.5em
            color $play-hearth-color

            &.fa-heart-o
              color $play-hearth-border

  .message
    top 25%
    left 0
    position absolute
    right 0
    text-align center

    h1
      color #dbb62b
      font-size 3.5rem
      font-weight 900
      margin 0

    .action

      .button
        height 5rem !important
        margin-top 2rem !important
        width calc(100% - 1rem)

        &.more
          button($play-more-bkg, $play-more-color)

        &.continue
          button($play-continue-bkg, $play-continue-color)

        &.surrender
          button($play-surrender-bkg, $play-surrender-color)
